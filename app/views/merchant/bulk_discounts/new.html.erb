<h1>Create a New Bulk Discount</h1>
<%= form_with model: @bulk_discount, url: merchant_bulk_discounts_path(@merchant),local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>

  <%= form.label :quantity_threshold %>
  <%= form.text_field :quantity_threshold %>

  <%= form.label :percentage_discount %>
  <%= form.text_field :percentage_discount %>

  <%= form.submit %>
<% end %>